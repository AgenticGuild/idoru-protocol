{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "chai", "mocha", "hardhat"],
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["hardhat.config.ts", "scripts/**/*.ts", "test/**/*.ts", "facilitator/**/*.ts", "sdk/node/**/*.ts", "contracts/**/*.sol"]
}
